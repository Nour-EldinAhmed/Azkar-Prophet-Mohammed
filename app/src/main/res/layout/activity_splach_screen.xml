<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SplachScreen">
    <ImageView
        android:id="@+id/img_azkar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pray" />

    <TextView
        android:id="@+id/txt_azkar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_azkar"
        app:layout_constraintBottom_toBottomOf="@id/img_azkar"
        app:layout_constraintStart_toStartOf="@id/img_azkar"
        app:layout_constraintEnd_toEndOf="@id/img_azkar"
        android:gravity="center"
        android:text="@string/aya"
        android:textColor="#ECE3E3"
        android:textSize="29sp"
        android:textStyle="bold" />
</androidx.constraintlayout.widget.ConstraintLayout>